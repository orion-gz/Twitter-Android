<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.detail.TweetDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextColor="@color/white"
            app:title="Tweet"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                tools:text="Orion" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/display_name"
                app:layout_constraintTop_toBottomOf="@+id/display_name"
                tools:text="@orion_gz" />

            <ImageButton
                android:id="@+id/more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tweet_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_image"
                tools:text="This is a detailed view of the tweet in X style. The text is larger and easier to read." />

            <TextView
                android:id="@+id/tweet_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tweet_content"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="10:30 AM Â· Nov 28, 2025" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_gray"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tweet_date"/>

            <LinearLayout
                android:id="@+id/stats_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@+id/divider1">

                <TextView
                    android:id="@+id/retweet_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"
                    tools:text="12"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retweets"
                    android:textColor="@color/light_gray"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/like_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"
                    tools:text="54"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes"
                    android:textColor="@color/light_gray"/>
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_gray"
                app:layout_constraintTop_toBottomOf="@+id/stats_layout"/>

            <LinearLayout
                android:id="@+id/actions_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/divider2">

                <ImageButton
                    android:id="@+id/reply_button_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_reply"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/light_gray"/>
                <ImageButton
                    android:id="@+id/retweet_button_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_retweet"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/light_gray"/>
                <ImageButton
                    android:id="@+id/like_button_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_like"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/light_gray"/>
                <ImageButton
                    android:id="@+id/share_button_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_share"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/light_gray"/>
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_gray"
                app:layout_constraintTop_toBottomOf="@+id/actions_layout"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/replies_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/divider3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:padding="12dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_gray"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/my_profile_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
            tools:src="@tools:sample/avatars" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reply_input_layout"
            style="@style/Widget.App.TextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:boxStrokeWidth="0dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toEndOf="@+id/my_profile_image"
            app:layout_constraintEnd_toStartOf="@+id/reply_send_button"
            app:layout_constraintTop_toTopOf="@+id/my_profile_image"
            app:layout_constraintBottom_toBottomOf="@+id/my_profile_image">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reply_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tweet your reply"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:background="@android:color/transparent"
                android:padding="0dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/reply_send_button"
            style="@style/Widget.App.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/my_profile_image"
            app:layout_constraintBottom_toBottomOf="@+id/my_profile_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>